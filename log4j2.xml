<?xml version="1.0" encoding="UTF-8"?>
<root>
<Configuration status="WARN">
    <Appenders>
        <!-- JSON Appender -->
        <File name="JsonFile" fileName="logs/agent-log.json">
            <JsonLayout compact="true" eventEol="true" />
        </File>
    </Appenders>

    <Loggers>
        <!-- Root logger to log everything to JSON file -->
        <Root level="info">
            <AppenderRef ref="JsonFile" />
        </Root>
    </Loggers>
</Configuration>    
</root>

