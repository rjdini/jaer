<configuration debug="true">

    <!-- JSON Message-Only Appender for JSON output -->
    <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/AgentDrawable.json</file>
        
        <!-- Rolling policy to handle file rotation -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/AgentDrawable-%d{yyyy-MM-dd}.json</fileNamePattern>
            <maxHistory>7</maxHistory> <!-- Retain logs for 7 days -->
        </rollingPolicy>
        
        <!-- Custom Encoder to log only the message part (assumed JSON format) -->
        <encoder>
            <pattern>%msg%n</pattern> <!-- Only log the message part -->
        </encoder>
    </appender>

    <!-- Logger for AgentDrawable Class -->
    <logger name="com.inilabs.jaer.projects.gui.AgentDrawable" level="INFO" additivity="false">
        <appender-ref ref="JSON_FILE"/>
    </logger>

    <!-- Root Logger (for other logging, if needed) -->
    <root level="DEBUG">
        <!-- Other appenders (like CONSOLE, FILE) if needed -->
    </root>
</configuration>
